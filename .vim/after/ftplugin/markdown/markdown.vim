"
" markdown specific setting files
" ----------------------------
nnoremap <leader>8 :e ~/Documents/git-repos/dotfiles/.vim/after/ftplugin/markdown/markdown.vim<cr>

"
" spelling
" ----------------------------
set spelllang=en
set spell

"
" tabs 
" ----------------------------
set softtabstop=3
set shiftwidth=3
set tabstop=3

"
" vim-markdown settings 
" ----------------------------
let g:vim_markdown_frontmatter = 1
set conceallevel=2
